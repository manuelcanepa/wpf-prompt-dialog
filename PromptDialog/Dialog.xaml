<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        x:Class="PromptDialog.Dialog"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
        MinWidth="300"
        MinHeight="100"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanMinimize">
  <StackPanel Margin="5">
    <TextBlock Name="txtQuestion" Margin="5"/>
    <TextBox Name="txtResponse" Margin="5" Visibility="Collapsed" />
    <PasswordBox Name="txtPasswordResponse" Visibility="Collapsed" />
    <DatePicker Name="dtpDateResponse" Visibility="Collapsed" />
    <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
      <Button Content="_Ok" IsDefault="True" Margin="5" Name="btnOk" Click="btnOk_Click" />
      <Button Content="_Cancel" IsCancel="True" Margin="5" Name="btnCancel" Click="btnCancel_Click" />
    </StackPanel>
  </StackPanel>
</Window>